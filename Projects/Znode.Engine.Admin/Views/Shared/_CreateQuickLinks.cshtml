            <li>@Html.AuthorizedRawActionLink(Admin_Resources.TitleAccount, "Create", "Account", new { area = "" }, new { @target = "_blank" })</li>
            <li>@Html.AuthorizedRawActionLink(Admin_Resources.LabelUser, "CustomerCreate", "Customer", new { area = "" }, new { @target = "_blank" })</li>
            <li>@Html.AuthorizedRawActionLink(Admin_Resources.LabelUserProfile, "Create", "profiles", new { area = "" }, new { @target = "_blank" })</li>
        </ul>
    </li>
    }

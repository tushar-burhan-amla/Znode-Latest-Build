            <li>@Html.AuthorizedRawActionLink(Admin_Resources.OrderHeader, "CreateOrder", "Order", new { area = "" }, new { @target = "_blank" })</li>
            <li>@Html.AuthorizedRawActionLink(Admin_Resources.TitleQuote, "CreateQuoteRequest", "Quote", new { area = "" }, new { @target = "_blank" })</li>

            @*Commenting line : As per current API and OAB implementation this is out of scope for 9.0.6.*@
            @*<li>@Html.AuthorizedRawActionLink(Admin_Resources.TextQuote, "CreateQuote", "Quote", new { area = "" }, new { @target = "_blank" })</li>*@
        </ul>
    </li>
    @if (SessionProxyHelper.IsSalesRepUser() == false)
    {
        <li>
            <label>@Admin_Resources.LabelExperience</label>
            <ul>
                <li>@Html.AuthorizedRawActionLink(Admin_Resources.LabelPage, "AddContentPage", "Content", new { area = "", @folderId = 1 }, new { @target = "_blank" })</li>
                <li>@Html.AuthorizedRawActionLink(Admin_Resources.TitleBanner, "GetSliderList", "WebSite", new { area = "" }, new { @target = "_blank" })</li>
                <li>@Html.AuthorizedRawActionLink(Admin_Resources.TextCoupon, "Create", "Promotion", new { area = "" }, new { @target = "_blank" })</li>
            </ul>
        </li>

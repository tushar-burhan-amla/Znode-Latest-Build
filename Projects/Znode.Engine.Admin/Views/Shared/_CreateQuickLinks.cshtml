@using Znode.Engine.Admin.Helpers;
<h4 class="popup-heading">@Admin_Resources.LabelCreate</h4>
<ul class="main">
    @if (SessionProxyHelper.IsSalesRepUser() == false)
    {
        <li>
            <label>@Admin_Resources.TitleStoresList</label>
            <ul>
                <li>@Html.AuthorizedRawActionLink(Admin_Resources.LabelStore, "CreateStore", "Store", new { area = "" }, new { @target = "_blank" })</li>
                <li>@Html.AuthorizedRawActionLink(Admin_Resources.TitleStoreLocation, "Create", "StoreLocator", new { area = "" }, new { @target = "_blank" })</li>
            </ul>
        </li>
        <li>
            <label>@Admin_Resources.TitleProductsList</label>
            <ul>
                <li>@Html.AuthorizedRawActionLink("Product", "Create", "Products", new { area = "PIM" }, new { @target = "_blank" })</li>
                <li>@Html.AuthorizedRawActionLink(Admin_Resources.TitleCategory, "Create", "Category", new { area = "PIM" }, new { @target = "_blank" })</li>
                <li>@Html.AuthorizedRawActionLink(Admin_Resources.TitleCatalog, "Create", "Catalog", new { area = "PIM" }, new { @target = "_blank" })</li>
                <li>@Html.AuthorizedRawActionLink("Media", "List", "MediaManager", new { area = "MediaManager" }, new { @target = "_blank" })</li>
                <li>@Html.AuthorizedRawActionLink(Admin_Resources.LabelBrand, "Create", "Brand", new { area = "PIM" }, new { @target = "_blank" })</li>
                <li>@Html.AuthorizedRawActionLink("Product Attribute", "Create", "ProductAttribute", new { area = "PIM" }, new { @target = "_blank" })</li>
                <li>@Html.AuthorizedRawActionLink("Category Attribute", "Create", "CategoryAttribute", new { area = "PIM" }, new { @target = "_blank" })</li>
            </ul>
        </li>
   
    <li>
        <label>@Admin_Resources.TitleCustomers</label>

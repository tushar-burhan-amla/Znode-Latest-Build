@model Znode.Engine.Admin.ViewModels.KlaviyoViewModel

<div id="EmailProviderForm-container">
    <h3 class="section-heading margin-top-25" data-test-selector="hdgProvidersHeading">@Admin_Resources.LabelHeaderProviderSetting</h3>

    <div class="form-group">
        <div class="col-sm-12 nopadding">
            <div class="control-label">
                @Html.LabelFor(m => m.KlaviyoUserName, new {@class = "required", @data_test_selector = "lblKlaviyoUserName" })
            </div>
            <div class="control-md">
                @Html.TextBoxFor(m => m.KlaviyoUserName, new { required = "required", @data_test_selector = "txtKlaviyoUserName" })
                @Html.ValidationMessageFor(model => model.KlaviyoUserName, @Admin_Resources.RequiredUserName, new { @data_test_selector = "valKlaviyoUserName" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12 nopadding">
            <div class="control-label">
                @Html.LabelFor(m => m.KlaviyoPassword, new { @class = "required", @data_test_selector = "lblKlaviyoPassword" })
            </div>
            <div class="control-md">
                @Html.TextBoxFor(m => m.KlaviyoPassword, new { @type = "password", required = "required", @data_test_selector = "txtKlaviyoPassword" })
                @Html.ValidationMessageFor(model => model.KlaviyoPassword, @Admin_Resources.RequiredPassword, new { @data_test_selector = "valKlaviyoPassword" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12 nopadding">
            <div class="control-label">
                @Html.LabelFor(m => m.PublicApiKey, new { @class = "required", @data_test_selector = "lblPublicApiKey " })
            </div>
            <div class="control-md">
                @Html.TextBoxFor(m => m.PublicApiKey, new { required = "required", @data_test_selector = "txtPublicApiKey " })
                @Html.ValidationMessageFor(m => m.PublicApiKey, @Admin_Resources.ErrorKlaviyoApiKeyRequired, new { @data_test_selector = "valPublicApiKey " })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="control-md control-non">
            <label>
                <input @(Model.IsActive ? "checked='checked'" : "") id="IsActiveForKlaviyo" name="IsActive" type="checkbox" value="true" data-test-selector="chkIsActiveForKlaviyo">
                <span class="lbl padding-8" data-test-selector="spnIsActiveForKlaviyo">@Admin_Resources.LabelIsActiveForKlaviyo</span>
            </label>
            @Html.Partial("_HelpText", @Admin_Resources.KlaviyoEnableLabel)
        </div>
    </div>

    @Html.HiddenFor(m => m.PortalId)
    @Html.HiddenFor(m => m.PortalKlaviyoSettingId, new { @id = "hdnportalklaviyosettingid" })
    @Html.HiddenFor(m => m.PortalName)
    @Html.HiddenFor(model => model.EmailProviderId, new { @id = "hdnemailProviderId" })

</div>



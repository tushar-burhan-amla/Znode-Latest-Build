@using Znode.Engine.Admin.ViewModels
@model RMARequestItemListViewModel
@using Znode.Libraries.ECommerce.Utilities;
@using Znode.Engine.Admin.Helpers;
@{
    if (!Equals(Model, null))
    {
        if (Model.flag.Equals("view", StringComparison.CurrentCultureIgnoreCase))
        {
            if (HelperUtility.IsNotNull(Model.RMARequestItemList))
            {
                <div class="col-sm-12 cost-container nopadding">
                    <div class="form-group total">
                        <div class="col-sm-3 nopadding">@PIM_Resources.LabelSubTotal</div>
                        <div id="dynamic-sub-total" class="col-sm-9">@HelperMethods.FormatPriceWithCurrency(Model.RMARequestItemList[0].SubTotal, Model.CultureCode)</div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3 nopadding">@PIM_Resources.LabelTax</div>
                        <div id="dynamic-tax-amount" class="col-sm-9">@HelperMethods.FormatPriceWithCurrency(Model.RMARequestItemList[0].TaxCost, Model.CultureCode)</div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3 nopadding">@PIM_Resources.LabelTotal</div>
                        <div id="dynamic-total" class="col-sm-9">@HelperMethods.FormatPriceWithCurrency(Model.RMARequestItemList[0].Total, Model.CultureCode)</div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-sm-12 cost-container nopadding">
                <div class="form-group total">
                    <div class="col-sm-3 nopadding">@PIM_Resources.LabelSubTotal</div>
                    <div id="dynamic-sub-total" class="col-sm-9">@HelperMethods.FormatPriceWithCurrency(Model.SubTotal, Model.CultureCode)</div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 nopadding">@PIM_Resources.LabelTax</div>
                    <div id="dynamic-tax-amount" class="col-sm-9">@HelperMethods.FormatPriceWithCurrency(Model.Tax, Model.CultureCode)</div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 nopadding">@PIM_Resources.LabelTotal</div>
                    <div id="dynamic-total" class="col-sm-9">@HelperMethods.FormatPriceWithCurrency(Model.Total, Model.CultureCode)</div>
                </div>
            </div>
        }

    }
}
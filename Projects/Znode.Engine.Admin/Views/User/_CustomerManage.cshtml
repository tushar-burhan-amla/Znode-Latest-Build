@model Znode.Engine.Admin.ViewModels.CustomerViewModel
@using Znode.Engine.Admin.Helpers

<div class="col-sm-12 page-container">
    <div class="col-sm-12 title-container">
        <h1>General Info</h1>
        <div class="pull-right">
            <a href="/User/CustomersList" class="btn-text-icon"><em class="z-back"></em>@Admin_Resources.ButtonBack</a>
            <a href="/User/CustomerEdit?userId=@Model.UserId" class="btn-text-icon"><em class="z-edit"></em>@Admin_Resources.ButtonEdit</a>
        </div>
    </div>
    <div class="col-sm-12 box-container nopadding">
        <h3 class="section-heading">@Admin_Resources.ManageContactInformation</h3>
        <div class="form-group">
            <div class="col-sm-12 nopadding">
                <div class="control-label">
                    @Html.LabelFor(model => model.FullName)
                </div>
                <div class="control-md">
                    <input type="text" value="@Model.FullName" readonly="readonly" />
                </div>
            </div>
        </div>


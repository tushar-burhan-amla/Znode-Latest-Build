            }
            else
            {
                @Html.RadioButtonFor(x => x.IsFacets, "true", new { @id = "IsFacets_left" }) <label for="IsFacets_left">Yes</label>
                    @Html.RadioButtonFor(x => x.IsFacets, "false", new { @checked = true, @id = "IsFacets_right" }) <label for="IsFacets_right">No</label>
            }
        </div>

        <div class="help-text"><em class="z-help-circle" data-toggle="tooltip" data-placement="right" title="" data-original-title="@Admin_Resources.HelpFacetsOptions"></em> </div></div>

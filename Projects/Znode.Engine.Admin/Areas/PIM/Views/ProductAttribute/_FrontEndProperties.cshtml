                @Html.RadioButtonFor(x => x.IsUseInSearch, "true", new { @id = "IsUseInSearch_left" }) <label for="IsUseInSearch_left">Yes</label>
                @Html.RadioButtonFor(x => x.IsUseInSearch, "false", new { @checked = true, @id = "IsUseInSearch_right" }) <label for="IsUseInSearch_right">No</label>}
        </div>
        <div class="help-text"><em class="z-help-circle" data-toggle="tooltip" data-placement="right" title="" data-original-title="@Admin_Resources.HelpSearchOptions"></em> </div>
    </div>
</div>

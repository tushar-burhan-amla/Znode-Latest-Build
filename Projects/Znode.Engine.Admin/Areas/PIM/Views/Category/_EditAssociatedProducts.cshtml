@using Znode.Engine.Admin.ViewModels;
@model CategoryProductViewModel

@using (Ajax.BeginForm("EditAssociatedProducts", "Category",
                           new AjaxOptions()
                           {
                               HttpMethod = "post",
                               OnSuccess = "Category.prototype.EditCategoryProductResult",
                               InsertionMode = InsertionMode.Replace,
                           },
                           new { @id = "frmCategoryProduct" }))
{
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" title="@Admin_Resources.ButtonCancel"><i class="z-close-circle"></i></button>
                <h4 class="modal-title">@PIM_Resources.HeaderAssociateProductSetting</h4>
            </div>

            <div class="modal-body">
                <div class="col-sm-12 page-container">
                    <div class="col-sm-12 nopadding">
                        <div class="col-sm-12 nopadding">
                            <div class="form-group">
                                <div class="col-sm-12 nopadding">
                                    <div class="control-label">
                                        @Html.LabelFor(model => model.DisplayOrder, new { @class = "required" })
                                    </div>                                    
                                    <div class="control-lg">
                                        @Html.TextBoxFor(model => model.DisplayOrder)
                                        @Html.ValidationMessageFor(model => model.DisplayOrder)
                                    </div>
                                </div>                              
                            </div>
                            <div class="form-group">
                                <div class="control-lg control-non">
                                    <label>
                                        <input id="Status" name="Status" checked="@Model.Status" type="checkbox" value="true">
                                        <span class="lbl padding-8" for="Status">@PIM_Resources.LabelEnableProduct</span>
                                        <input name="Status" type="hidden" value="false">
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.HiddenFor(model=>model.PimCategoryId)
            @Html.HiddenFor(model => model.PimCategoryProductId)
            @Html.HiddenFor(model => model.PimProductId)
            <div class="modal-footer">
                <div class="col-sm-12 nopadding">
                    <div class="pull-right">
                        <button id="AddDisplayOrder" type="submit" class="btn-text-icon"><i class="z-save"></i>@Admin_Resources.ButtonSave</button>
                        <button id="CancelDisplayOrder" type="button" class="btn-text-icon" data-dismiss="modal"><i class="z-cancel"></i>@Admin_Resources.ButtonCancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@Scripts.Render("~/bundles/jqueryval")

@using Znode.Engine.WebStore.ViewModels
@using Znode.Engine.WebStore.Agents;
@model  List<ProductReviewViewModel>
<div id="layout-account-reviewhistory" class="main-wrapper col">
    <div class="row">
        <div class="container-fluid profile-dashboard">
            <div class="row">
                <div class="container">
                    @Html.Partial("_AccountMenuDashboard")
                </div>
            </div>
        </div>
    </div>
    <div class="row b2b-breadcrumbs d-none d-md-block">
        <div class="container">
            <div class="row">
                <!-- Breadcrumb -->
                <div id="breadCrumb" class="col breadcrumb-container"><a href="/" class="home-icon pr-2" title="Home"></a><a href="/User/Dashboard">My Account</a>/ Review History</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container">
            <div class="row user-account">
                <div class="col-12 account-dashboard">
                    <div class="row mb-5">
                        <div class="col-12 col-lg-9 review-history right-container">
                            <div class="row no-gutters">
                                <div class="col-12 p-0">
                                    <h1 class="page-title">@WebStore_Resources.TitleReviewHistory</h1>
                                </div>
                                <div class="col-12 p-0 mb-4 dashboard-content">
                                    <h3 class="b2b-section-header">@string.Format(WebStore_Resources.SubTextReviewProducts, (Model?.Count > 0 ? Model.Count : 0))</h3>
                                    @if (Model?.Count > 0)
                                    {
                                        <div class="col-12 p-0">
                                            <div class="col-12 account-recent-orders">
                                                @foreach (var item in Model)
                                                {
                                                    <div class="row">
                                                        <div class="col-12 p-0 review-item-detail">
                                                            <a href="@Url.GetProductUrl(item.SEOUrl, item.PublishProductId.ToString())" class="review-item-title underline">
                                                                @WebUtility.HtmlDecode(item.ProductName)
                                                            </a>
                                                            @Html.Partial("../Product/_ReviewRow", item)
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                            <div class="col-12 suggestion-msg d-block b2b-order-history">
                                                @WebStore_Resources.SubTextReviewHistory
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-12 p-4">
                                            @WebStore_Resources.ErrorNoReviewsFound
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 p-0 mt-4 pt-3">
                            <div class="col-12">
                                <p class="key-PromoSpot">@Html.RenderMessage("PromoSpot")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@using Znode.Engine.WebStore.ViewModels
@using Znode.Engine.WebStore.Agents;
@model TemplateViewModel
@{
    string actionName = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    Model.IsViewMode = true;
}
<div id="layout-template-cartItem" class="main-wrapper col">
    <div class="row">
        <div class="container-fluid profile-dashboard">
            <div class="row">
                <div class="container">
                    @Html.Partial("_AccountMenuDashboard")
                </div>
            </div>
        </div>
    </div>
    <div class="row b2b-breadcrumbs d-none d-md-block">
        <div class="container">
            <div class="row">
                <!-- Breadcrumb -->
                <div id="breadCrumb" class="col breadcrumb-container"><a href="/" class="home-icon pr-2" title="Home"></a><a href="/User/Dashboard">@WebStore_Resources.TitleMyAccount</a> /@WebStore_Resources.LabelViewTemplate</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container">
            <div class="row user-account">
                <div class="col-12 account-dashboard">
                    <div class="row mb-5">
                        <div class="col-12 col-lg-9 right-container">
                            <div class="row no-gutters">
                                <div class="col-12">
                                    <h1 class="page-title">@WebStore_Resources.LabelViewTemplate</h1>
                                </div>
                                <div class="col-12 p-0 mb-4 dashboard-content">
                                    <div class="col-12 account-recent-orders">
                                        <div class="col-12 p-4">
                                            @using (Html.BeginForm(actionName, "User", FormMethod.Post, new { role = "form", @id = "frmCreateEditTemplate", @class = "col-12 p-0" }))
                                            {
                                                <div class="col-12 col-md-6 p-0 b2b-form">
                                                    @Html.AntiForgeryToken()
                                                    <div class="form-group">
                                                        @Html.LabelFor(x => x.TemplateName)
                                                        @Html.TextBoxFor(x => x.TemplateName, new { @readonly = "readonly", data_val_required = @WebStore_Resources.ValidTemplateName })
                                                        @Html.ValidationMessageFor(x => x.TemplateName, "", new { id = "validTemplateName" })
                                                    </div>

                                                    @Html.HiddenFor(x => x.OmsTemplateId)
                                                </div>
                                            }
                                        </div>
                                        <div id="TemplateCartItem">
                                            @Html.Partial("_CartTemplateRow", Model)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 p-0 mt-4 pt-3">
                            <div class="col-12">
                                <p class="key-PromoSpot">@Html.RenderMessage("PromoSpot")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using Znode.Engine.WebStore.Agents
@{
    var currentPortal = PortalAgent.CurrentPortal;
    string enableECert = currentPortal?.GlobalAttributes?.Attributes?.FirstOrDefault(x => x.AttributeCode == WebStoreConstants.EnableECertificate)?.AttributeValue;

}
@if (!string.IsNullOrEmpty(enableECert) && Convert.ToBoolean(enableECert))
{
<div id="layout-account-book" class="main-wrapper">
    <div class="row">
        <div class="container-fluid profile-dashboard">
            <div class="row">
                <div class="container">
                    @Html.Partial("_AccountMenuDashboard")
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row user-account">
            <div class="col-12 account-dashboard p-0">
                <div class="col-12 col-lg-9 right-container">
                    <div class="col-12">
                        <h1 class="page-title">@WebStore_Resources.ECertBalancePageTitle</h1>
                    </div>
                    <div class="col-12 p-0 ">
                        <div class="col-12 col-sm-12 p-0">
                            <h3 class="section-header">@WebStore_Resources.ECertBalancePageHeading</h3>
                        </div>

                        <div class="col-12 col-sm-12 p-0 mb-3 available-ecertlist" id="eCertList">
                            @{Html.RenderAction("AvailableEcertList", "eCert");}
                        </div>
                        <div class="col-12 p-0 mb-3 add-ecert-balance" id="eCertList">
                            @{ Html.RenderAction("AddECertToBalance", "eCert"); }
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-3 p-0 mt-4 pt-3">
                    <div class="col-12">
                        <p class="key-PromoSpot">@Html.RenderMessage("PromoSpot")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>}

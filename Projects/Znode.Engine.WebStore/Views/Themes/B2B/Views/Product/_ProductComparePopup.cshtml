@using Znode.Engine.WebStore.ViewModels
@model ProductComparePopUpViewModel

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" data-test-selector="hdgProdCompPopUp">@WebStore_Resources.HeaderProductCompare</h4>
        <button type="button" class="close" data-dismiss="modal"><span class="close-circle-icon"></span></button>
    </div>
    <div class="modal-body">
        <p>@Model.Message</p>
    </div>
    <div class="modal-footer">
        <div class="d-flex flex-wrap quotebutton">
            @if (Model.ErrorCode == 1)
            {
                <button type="button" onclick="Category.prototype.CategoryLevelComparison('@Model.ProductId','@Model.CategoryId')" id="btn-cancel-popup" class="btn btn-primary" data-dismiss="modal">@WebStore_Resources.OkButtonLabel</button>
            }
            else if (Model.ErrorCode == 2 || Model.ErrorCode == 3)
            {
                <button type="button" id="btn-cancel-popup" class="btn btn-primary" data-dismiss="modal">@WebStore_Resources.OkButtonLabel</button>
            }
            else if (Model.HideViewComparisonButton)
            {
                <button type="button" id="btn-cancel-popup" class="btn btn-primary" data-dismiss="modal">@WebStore_Resources.AddMoreButtonLabel</button>
            }
            else
            {
                <button data-test-selector="btnOK" type="button" id="btn-cancel-popup" class="btn btn-primary" data-dismiss="modal">@WebStore_Resources.AddMoreButtonLabel</button>

                <button data-test-selector="btnViewCompare" type="button" onclick="Category.prototype.GetProductComparison()" id="btn-cancel-popup" class="btn btn-secondary mt-3 mt-md-0 ml-0 ml-md-3" data-dismiss="modal">@WebStore_Resources.ViewComparisonButtonLabel</button>
            }
        </div>
    </div>
</div>


